{
  "name": "local-knowledge-agent-poc",
  "version": "1.3.1",
  "private": true,
  "main": "src/main.js",
  "author": {
    "name": "Andrew Rea",
    "email": "reaandrew@gmail.com"
  },
  "description": "A local knowledge agent proof of concept",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --publish always",
    "build:linux": "electron-builder build --linux AppImage --publish always",
    "semantic-release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.local-knowledge-agent-poc",
    "productName": "Local Knowledge Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "images/logo.png"
    },
    "publish": {
      "provider": "github",
      "owner": "reaandrew",
      "repo": "local-knowledge-agent-poc",
      "private": false,
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.14",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "electron-mocha": "^13.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "semantic-release": "^23.0.2"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "conf": "^10.2.0",
    "type-fest": "^2.19.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "atomically": "^1.7.0",
    "debounce-fn": "^4.0.0",
    "dot-prop": "^6.0.1",
    "json-schema-typed": "^7.0.3",
    "pkg-up": "^3.1.0",
    "mimic-fn": "^3.1.0",
    "find-up": "^3.0.0",
    "fast-uri": "^3.0.6",
    "json-schema-traverse": "^1.0.0",
    "require-from-string": "^2.0.2",
    "locate-path": "^3.0.0",
    "p-locate": "^3.0.0",
    "p-limit": "^2.3.0",
    "p-try": "^2.2.0"
  }
}
